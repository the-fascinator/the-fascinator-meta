<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
 <modelVersion>4.0.0</modelVersion>
 <groupId>au.edu.usq.fascinator.maven-plugins</groupId>
 <artifactId>schemagen</artifactId>
 <version>0.0.1-SNAPSHOT</version>
 <packaging>maven-plugin</packaging>
 <name>Schemagen plugin</name>
 <parent>
  <artifactId>organisation</artifactId>
  <groupId>au.edu.usq.fascinator</groupId>
  <version>0.4.0</version>
 </parent>

 <dependencies>
  <dependency>
   <groupId>org.apache.maven</groupId>
   <artifactId>maven-plugin-api</artifactId>
   <version>2.0</version>
  </dependency>

  <dependency>
   <groupId>au.edu.usq.fascinator</groupId>
   <artifactId>fascinator-vocabulary</artifactId>
   <version>0.7.0-SNAPSHOT</version>
  </dependency>

 </dependencies>

 <description>This plugin can be used to generate a set of Java classes for accessing RDF via RDF2Go.</description>
 <url>http://fascinator.usq.edu.au/trac/wiki/tf2/contrib/maven/plugins/schemagen</url>
 <scm>
 	<url>http://fascinator.usq.edu.au/svn/code/the-fascinator2/contrib/maven/plugins/schemagen/</url>
 </scm>
 <build>
  <plugins>
   <plugin>
    <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-jar-plugin</artifactId>
    <version>2.2</version>
    <configuration>
     <archive>
      <manifest>
       <mainClass>au.edu.usq.fascinator.maven_plugins.schemagen.RDF2Go
       </mainClass>
      </manifest>
     </archive>
    </configuration>
   </plugin>
  </plugins>
 </build>
 <profiles>
  <profile>
   <id>rdf2go</id>
   <activation>
    <activeByDefault>true</activeByDefault>
   </activation>
   <build>
    <plugins>
     <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>exec-maven-plugin</artifactId>
      <version>1.1.1</version>
      <configuration>
       <mainClass>au.edu.usq.fascinator.maven_plugins.schemagen.RDF2Go
     </mainClass>
      </configuration>
     </plugin>
    </plugins>
   </build>
  </profile>
 </profiles>
 <reporting>
  <plugins>
   <plugin>
    <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-plugin-plugin</artifactId>
    <version>2.5.1</version>
   </plugin>
  </plugins>
 </reporting>
</project>